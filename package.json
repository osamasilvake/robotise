{
	"name": "roc",
	"version": "2.0.0",
	"private": true,
	"scripts": {
		"start": "craco start",
		"build": "craco build",
		"test": "craco test",
		"test:ci": "CI=true craco test",
		"pretty:check": "prettier --check './**/*.{js,jsx,ts,tsx,json}'",
		"pretty:apply": "prettier --write './**/*.{js,jsx,ts,tsx,json}'",
		"lint:es": "npx eslint './**/*.{js,jsx,ts,tsx}' --quiet",
		"lint:es:fix": "npx eslint './**/*.{js,jsx,ts,tsx}' --fix",
		"scan:all": "yarn pretty:apply && yarn lint:es && yarn test:ci",
		"docker:dev": "cd docker && docker-compose --file Docker.dev.yml up",
		"docker:prod": "cd docker && docker-compose --file Docker.prod.yml up --build",
		"release": "standard-version",
		"release:major": "yarn release -- --release-as major",
		"release:minor": "yarn release -- --release-as minor",
		"release:patch": "yarn release -- --release-as patch"
	},
	"dependencies": {
		"@craco/craco": "^6.1.2",
		"@date-io/date-fns": "^2.10.11",
		"@emotion/react": "^11.4.0",
		"@emotion/styled": "^11.3.0",
		"@material-ui/core": "^5.0.0-alpha.30",
		"@material-ui/icons": "^5.0.0-alpha.28",
		"@reduxjs/toolkit": "^1.6.0",
		"@types/jest": "^26.0.23",
		"@types/jsonapi-serializer": "^3.6.3",
		"@types/node": "^15.12.5",
		"@types/react": "^17.0.11",
		"@types/react-dom": "^17.0.8",
		"@types/react-redux": "^7.1.16",
		"@types/react-router-dom": "^5.1.7",
		"@types/redux-logger": "^3.0.8",
		"@types/redux-mock-store": "^1.0.2",
		"axios": "^0.21.1",
		"clsx": "^1.1.1",
		"date-fns": "^2.22.1",
		"i18next": "^20.3.2",
		"jsonapi-serializer": "^3.6.7",
		"jwt-decode": "^3.1.2",
		"loglevel": "^1.7.1",
		"moment": "^2.29.1",
		"react": "^17.0.2",
		"react-dom": "^17.0.2",
		"react-helmet-async": "^1.0.9",
		"react-i18next": "^11.11.0",
		"react-markdown": "^6.0.2",
		"react-redux": "^7.2.4",
		"react-router-dom": "^5.2.0",
		"react-scripts": "4.0.3",
		"redux": "^4.1.0",
		"redux-devtools-extension": "^2.13.9",
		"redux-logger": "^3.0.6",
		"redux-mock-store": "^1.5.4",
		"redux-thunk": "^2.3.0",
		"typescript": "~4.3.4"
	},
	"devDependencies": {
		"@commitlint/cli": "^12.1.4",
		"@commitlint/config-conventional": "^12.1.4",
		"@typescript-eslint/eslint-plugin": "^4.28.0",
		"@typescript-eslint/parser": "^4.28.0",
		"eslint": "^7.29.0",
		"eslint-config-prettier": "^8.3.0",
		"eslint-plugin-jsx-a11y": "^6.4.1",
		"eslint-plugin-prettier": "^3.4.0",
		"eslint-plugin-react": "^7.24.0",
		"eslint-plugin-react-hooks": "^4.2.0",
		"eslint-plugin-simple-import-sort": "^7.0.0",
		"husky": "^6.0.0",
		"lint-staged": ">=11",
		"prettier": "^2.3.2",
		"standard-version": "^9.3.0"
	},
	"browserslist": {
		"production": [
			">0.2%",
			"not dead",
			"not op_mini all"
		],
		"development": [
			"last 1 chrome version",
			"last 1 firefox version",
			"last 1 safari version"
		]
	}
}
