{
	"name": "root",
	"private": true,
	"scripts": {
		"pretty:check": "prettier --check 'packages/client/**/*.{js,jsx,ts,tsx,json}'",
		"pretty:apply": "prettier --write 'packages/client/**/*.{js,jsx,ts,tsx,json}'",
		"lint:es": "npx eslint 'packages/client/**/*.{js,jsx,ts,tsx}' --quiet",
		"lint:es:fix": "npx eslint 'packages/client/**/*.{js,jsx,ts,tsx}' --quiet",
		"test:jest": "cd packages/client && yarn test:ci",
		"scan:all": "yarn pretty:apply && yarn lint:es && yarn test:jest",
		"docker:dev": "docker-compose --file docker-compose.dev.yml up",
		"docker:prod": "docker-compose --file docker-compose.prod.yml up --build",
		"release": "lerna version --no-push"
	},
	"devDependencies": {
		"@commitlint/cli": "^12.0.1",
		"@commitlint/config-conventional": "^12.0.1",
		"@typescript-eslint/eslint-plugin": "^4.17.0",
		"@typescript-eslint/parser": "^4.17.0",
		"eslint": "^7.21.0",
		"eslint-config-prettier": "^8.1.0",
		"eslint-plugin-jsx-a11y": "^6.4.1",
		"eslint-plugin-prettier": "^3.3.1",
		"eslint-plugin-react": "^7.22.0",
		"eslint-plugin-react-hooks": "^4.2.0",
		"eslint-plugin-simple-import-sort": "^7.0.0",
		"husky": "^5.1.3",
		"lerna": "^4.0.0",
		"lint-staged": ">=10",
		"prettier": "^2.2.1",
		"typescript": "^4.2.3"
	}
}
