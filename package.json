{
	"name": "root",
	"version": "1.0.3",
	"private": true,
	"scripts": {
		"pretty:check": "prettier --check './**/*.{js,jsx,ts,tsx,json}'",
		"pretty:apply": "prettier --write './**/*.{js,jsx,ts,tsx,json}'",
		"lint:es": "npx eslint 'client/src/**/*.{js,jsx,ts,tsx}' --quiet",
		"lint:es:fix": "npx eslint 'client/src/**/*.{js,jsx,ts,tsx}' --quiet",
		"test:jest": "cd client && yarn test:ci",
		"scan:all": "yarn pretty:apply && yarn lint:es && yarn test:jest",
		"docker:dev": "docker-compose --file docker-compose.dev.yml up",
		"docker:prod": "docker-compose --file docker-compose.prod.yml up --build",
		"release": "standard-version",
		"release:major": "yarn release -- --release-as major",
		"release:minor": "yarn release -- --release-as minor",
		"release:patch": "yarn release -- --release-as patch"
	},
	"devDependencies": {
		"@commitlint/cli": "^12.0.1",
		"@commitlint/config-conventional": "^12.0.1",
		"@typescript-eslint/eslint-plugin": "^4.15.2",
		"@typescript-eslint/parser": "^4.15.2",
		"eslint": "^7.21.0",
		"eslint-config-prettier": "^8.1.0",
		"eslint-plugin-jsx-a11y": "^6.4.1",
		"eslint-plugin-prettier": "^3.3.1",
		"eslint-plugin-react": "^7.22.0",
		"eslint-plugin-react-hooks": "^4.2.0",
		"eslint-plugin-simple-import-sort": "^7.0.0",
		"husky": "^5.1.1",
		"lint-staged": ">=10",
		"prettier": "^2.2.1",
		"standard-version": "^9.1.1",
		"typescript": "^4.2.2"
	}
}
